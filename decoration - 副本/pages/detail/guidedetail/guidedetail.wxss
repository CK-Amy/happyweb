/* pages/detail/guidedetail/guidedetail.wxss */
.myicon{
   width:16px;
    height:16px;
    vertical-align: middle;
}
.dw_box{
  position:relative;
}

.case_img{
  width:100%;
  height:200px;
}
.case_text{
  position:absolute;
  bottom:10px;
  left:0px;
  /*z-index: 10;*/
  margin:0 10px;
  color: #fff;
}
.case_text .title{
  font-family: "黑体";
  font-size:12px;
  font-weight:100;
}
.case_flex{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-family: "黑体";
  font-size: 14px;
}
.left{
  float: left;
}
.right{
  float: right;
}

/*内容框的设置，他下面的view大元素的左右边距设置*/
.content>view{
  padding:5px 10px;
}

.designer_show{
   background:#fff;
}
.navbar_designer>view{
  margin-bottom:10px;
}
.house_header{
  padding:10px 15px;
}
.house_title{
  margin-left:8px;
  font-size:14px;
}
.house_type>image{
  width:100%;
  margin:10px 0 10px 0;
}
.house_introduce{
  color:#7F7F7F;
  font-size:14px;
  margin-left:10px;
  margin-right:10px;
  margin-top:10px;
  
}